/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.block{
  box-sizing: border-box;
  position: relative;
  width: 94%;
  margin: 0.8rem auto;
  color: #666;
  border-radius: .2rem;
  overflow: hidden;
}
.block .img{
  width: 100%;
  height: auto;
  max-height: 10rem;
}

.block .text{
  box-sizing: border-box;
  position: absolute;
  left: 0; 
  bottom: 0;
  background: rgba(0,0,0,.8);
  width: 100%;
  overflow: hidden;
  text-align: center;
  padding: 0.5rem;
  color: #fff;
  font-size: .7rem;
}

